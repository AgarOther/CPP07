# Compilation
CC					=	c++
CFLAGS				=	-Wall -Wextra -Werror -std=c++98 -g

# Names
NAME				=	array

# Sources & Includes
SRCS				= 	main.cpp
OBJ_FOLDER			=	objs

# Objects
OBJS				=	$(patsubst %.c, $(OBJ_FOLDER)/%.o, $(SRCS))

# Custom Makefile Flags
MAKEFLAGS			+=	--no-print-directory --silent

# Custom Colors
PURPLE				=	\033[1;35m
LIGHT_GREEN			=	\033[1;32m
RESET				=	\033[0m

# Custom messages
EXE_DONE			=	@echo "ðŸŽ‰$(PURPLE) $(NAME) compiled! ðŸŽ‰$(RESET)\n"
ALL_CLEAN			=	@echo "ðŸ§¹$(LIGHT_GREEN) Project's objects cleaned! ðŸ§¹$(RESET)\n"
ALL_FCLEAN			=	@echo "ðŸ§¹$(LIGHT_GREEN) Project's objects & Executables cleaned! ðŸ§¹$(RESET)\n"

# Rules

all : check_relink

check_relink:
	@if [ ! -d $(OBJ_FOLDER) ]; then \
		mkdir $(OBJ_FOLDER); \
	fi
	@if [ -f $(NAME) ]; then \
		echo 'âœ…$(LIGHT_GREEN) Nothing to be done for "all"! âœ…$(RESET)\n'; \
	else \
		$(MAKE) $(NAME); \
	fi

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	$(EXE_DONE)

$(OBJ_FOLDER)/%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

clean :
	@rm -rf $(OBJ_FOLDER)
	$(ALL_CLEAN)

fclean :
	@rm -f $(NAME)
	@rm -rf $(OBJ_FOLDER)
	$(ALL_FCLEAN)

re : fclean all

.PHONY: all clean fclean re
